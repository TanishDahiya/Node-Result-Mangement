<%- include('include/_header') %>

<div class="marginResult">
  <h3 class="text-center">Add New Result</h3>
</div>

<div class="container col-md-5">
  <div class="card">
    <div class="card-body">
      <form method="post" action="results/add">
        <fieldset class="form-group">
          <label>Roll No.</label>
          <input type="number" name="roll_no" class="form-control" required />
        </fieldset>

        <fieldset class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name" required />
        </fieldset>

        <fieldset class="form-group">
          <label>Date Of Birth</label>
          <input
            type="date"
            class="form-control"
            name="date_of_birth"
            required
          />
        </fieldset>

        <fieldset class="form-group">
          <label>Score</label>
          <input type="number" class="form-control" name="score" required />
        </fieldset>

        <button type="submit" class="btn btn-success">Add</button>
      </form>
    </div>
  </div>
</div>
<%- include('include/_footer') %>
